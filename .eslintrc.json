{
    "plugins": [
        "mocha"
    ],
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "browser": true        
    },
    "ignorePatterns": [
        "tests/**",
        "sandbox/**",
        "public/scripts/swiped-events.min.js"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "prefer-arrow-callback": 0,
        "mocha/prefer-arrow-callback": 2,
        "linebreak-style": 0
    }
}